<%- include('partials/header') %>
<div class="row mt-5">
  <div class="col-lg-5 mx-auto">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="fw-bold text-secondary">Reset Your Password</h2>
      </div>
      <div class="card-body p-5">
        <% if(message.success){ %>
        <div class="alert alert-success" role="alert">
          <strong><%= message.success %></strong>
        </div>
        <% } %>

        <% if(message.error){ %>
        <div class="alert alert-danger" role="alert">
          <strong><%= message.error %></strong>
        </div>
        <% } %>
        <form action="/reset-password" method="post">
          <input type="hidden" name="token" value="<%= token %>">

          <div class="mb-3">
            <label for="new_password">New Password</label>
            <input type="password" name="new_password" id="new_password" class="form-control" required>
          </div>
          <div class="mb-3">
            <label for="confirm_new_password">Confirm New Password</label>
            <input type="password" name="confirm_new_password" id="confirm_new_password" class="form-control" required>
          </div>

          <div class="mb-3">
            <button type="submit" class="btn btn-primary w-100">Update Password</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>